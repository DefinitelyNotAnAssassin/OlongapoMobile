<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_for_plain"
    tools:context=".Form">

    <ImageButton
        android:id="@+id/switchTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:background="#058C1F"
        android:src="@drawable/arrow_back"></ImageButton>





    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp"
        android:layout_marginLeft="11dp"
        android:background="@drawable/etlogin"
        android:layout_marginTop="150dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:text="DESTINATION ADDRESS"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/mapBtn"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/map"/>


            <EditText
                android:id="@+id/etAddressForm"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/et_bg"
                android:backgroundTint="@color/white"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </LinearLayout>






        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:text="REQUIRED ARRIVAL DATE TIME"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:layout_marginEnd="20dp">

                <ImageButton
                android:id="@+id/calendarBtn"
                android:layout_width="60dp"
                android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                android:background="@drawable/calendar"/>

                <ImageButton
                    android:id="@+id/clockBtn"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:background="@drawable/clock"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etDateForm"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/et_bg"
                    android:padding="7dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:hint="    mm/dd/yr"
                    android:textColorHint="#323131"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"/>

                <EditText
                    android:id="@+id/etTimeForm"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/et_bg"
                    android:backgroundTint="@color/white"
                    android:hint="    00:00"
                    android:padding="7dp"
                    android:textColor="@color/black"
                    android:textColorHint="#323131"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>





        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:text="NUMBER OF PASSENGERS"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etPassengerForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:inputType="text"
            android:background="@drawable/et_bg"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:text="VEHICLE TYPE"

            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etVehicleTypeForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:inputType="text"
            android:background="@drawable/et_bg"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:text="SPECIAL REQUEST"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etNotesForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_bg"
            android:backgroundTint="@color/white"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/btnMakeReqForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make a Request"
            android:padding="10dp"
            android:textSize="20dp"
            android:backgroundTint="#102E1B"/>

    </LinearLayout>


</LinearLayout>